.userinfo{
  width: 100%;
  height: 150px;
  background: #3e3e3e;
}
.userinfo .avatar{
  width: 100px;
  height: 100px;
  border-radius: 50%;
  overflow: hidden;
  margin-left: 40rpx;
  display: inline-block;
  margin-top: 50rpx;
}
.userinfo .avatar image{
  width: 100%;
  height: 100%;
}
.userinfo .name{
  display:inline-block;
  margin-left:40rpx;
  color:#fff;
  vertical-align:top;
  line-height:150px;
  font-size:48rpx;
}
