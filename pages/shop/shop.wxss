.show{
  display: block;
}
.hide{
  display: none;
}
.shopInfo{
  text-align: center;
  color: #3e3e3e;
  position: relative;
  margin-bottom: 20px;
}
.shopInfo .bg{
  background:#3e3e3e;
  height:70px;
}
.shopInfo .image{
  width: 100px;
  height: 100px;
  overflow: hidden;
  border-radius: 4px;
  margin:  0 auto;
  margin-top: -70px;
}
.shopInfo .image image{
  width: 100%;
  height: 100%;
}
.shopInfo .name{
  font-size: 20px;
  margin-top: 12px;
  font-weight: bold;
}

.menus{
  text-align: center;
  border-bottom: solid 1px #cdcdcd;
  height:44px;
  line-height: 44px;
  font-size: 16px;
}
.menus .item{
  display: inline-block;
  width: 33%;
}
.menus .item .way{
  display:inline-block;
}
.menus .item.active .way{
  border-bottom: solid 2px #f40;
}


.order{
  position: relative;
}
.order .scrollPage{
  height: 500px;
}
.order .left{
  display:inline-block;
  width:80px;
  background: #f5f5f5;
  position: fixed;
}
.order .left .item{
  height: 40px;
  line-height: 40px;
  padding: 0 4px 0 8px;
}
.order .left .item.active{
  background: #fff
}
.order .right{
  display:inline-block;
  width:calc(100% - 80px);
  background: #cdcdcd;
  position: fixed;
  margin-left: 80px;
}