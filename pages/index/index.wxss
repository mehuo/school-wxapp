.auth{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 1;
  background: rgba(255,255,255,0.9);
}
.auth .btn{
  width:200px;
  background:#1aad19;
  color:#fff;
  margin-top:50%
}
.home{
  background: #e5e5e5;
}
.activity{
  display: flex;
  background: #fff;
}
.activity .item{
  flex: 1;
  text-align: center;
  color: #888888;
  font-size: 14px;  
  padding-top: 60px;
  padding-bottom: 16px;
  position: relative;
}
.activity .item:before{
  content: "";
  position: absolute;
  width: 64px;
  height: 64px;
  left: 50%;
  top: 0;
  transform: translateX(-50%);
}
.activity .item:nth-child(2):before{
  background-position: -60px 0;
}
.activity .item:nth-child(3):before{
  background-position: -118px 0;
}
.activity .item:nth-child(4):before{
  background-position: -176px 0;
}
.activity .item.active{
  color: #53A89F;
}
.news{
  background: #fff;
  margin: 8px 0;
  color: #888888;
  font-size: 14px;
}
.news view{
  padding: 16px 16px;
}
.box{
  background: #fff;
  padding: 12px;
  margin: 8px 0;
}
.box .title{
  font-size: 24px;
  text-align: center;
  color: #676767;
}
.box .line{
  width: 40px;
  height: 2px;
  background: #e5e5e5;
  margin: 0 auto;
  margin-bottom: 14px;
}
.interactive{
  display: flex;
  margin-top: 12px;
}
.interactive .item{
  flex: 1;
  text-align: center;
  background: #F0F0F0;
  border-radius: 4px;
  margin: 0 4px;
  color: #888888;
  font-size: 14px;
  padding: 24px 0;
}